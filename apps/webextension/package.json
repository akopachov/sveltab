{
  "name": "webextension",
  "version": "1.9.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && node removeInlineScript.js ./build",
    "build:web-ext:chromium": "node generateManifest.js chromium && web-ext build --source-dir=build --overwrite-dest --artifacts-dir=build-web-ext/chromium",
    "build:web-ext:firefox": "node generateManifest.js firefox && web-ext build --source-dir=build --overwrite-dest --artifacts-dir=build-web-ext/firefox",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "run:ff": "node generateManifest.js firefox && web-ext run --devtools --firefox=deved --source-dir=build",
    "i18n": "paraglide-js compile --project ./project.inlang --outdir ./src/i18n/generated"
  },
  "devDependencies": {
    "@floating-ui/core": "^1.6.2",
    "@floating-ui/dom": "^1.6.5",
    "@iconify/json": "^2.2.222",
    "@iconify/tailwind": "^1.1.1",
    "@iconify/utils": "^2.1.25",
    "@inlang/paraglide-js": "1.10.1",
    "@inlang/paraglide-js-adapter-vite": "^1.2.40",
    "@putout/minify": "^4.3.0",
    "@skeletonlabs/skeleton": "^2.10.1",
    "@skeletonlabs/tw-plugin": "^0.4.0",
    "@sveltejs/adapter-static": "^3.0.2",
    "@sveltejs/kit": "^2.5.17",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@types/color": "^3.0.6",
    "@types/randomcolor": "^0.5.9",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "autoprefixer": "^10.4.19",
    "browser-storage-polyfill": "^1.0.11",
    "chart.js": "^4.4.3",
    "color": "^4.2.3",
    "cssnano": "^7.0.3",
    "cssnano-preset-default": "^7.0.3",
    "cssnano-preset-lite": "^4.0.1",
    "date-fns": "^3.6.0",
    "debounce": "^2.1.0",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.40.0",
    "fast-average-color": "^9.4.0",
    "fast-json-patch": "^3.1.1",
    "fflate": "^0.8.2",
    "flat-ui-colors-json": "^0.1.0",
    "hasha": "^6.0.0",
    "is-wsl2": "workspace:*",
    "nanoid": "^5.0.7",
    "openmeteo": "^1.1.4",
    "p-debounce": "^4.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "randomcolor": "^0.6.2",
    "svelte": "^4.2.18",
    "svelte-chartjs": "^3.1.5",
    "svelte-check": "^3.8.1",
    "svelte-fast-dimension": "^1.1.0",
    "svelte-floating-ui": "^1.5.9",
    "svelte-moveable": "^0.45.0",
    "svelte-selecto": "^1.26.3",
    "svelte-use-debounce": "^0.0.2",
    "svelte-virtual-scroll-list": "^1.3.0",
    "tailwindcss": "^3.4.4",
    "tiny-glob": "^0.2.9",
    "tslib": "^2.6.3",
    "tslog": "^4.9.3",
    "typescript": "^5.5.2",
    "vanilla-colorful": "^0.7.2",
    "vite": "^5.3.1",
    "vite-plugin-run-generator": "workspace:*",
    "vite-plugin-tailwind-purgecss": "^0.3.3",
    "web-ext": "^8.2.0",
    "webextension-polyfill": "^0.12.0"
  },
  "type": "module"
}
