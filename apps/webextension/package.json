{
  "name": "webextension",
  "version": "1.5.3",
  "private": true,
  "packageManager": "pnpm@9.0.1",
  "engines": {
    "pnpm": ">=8.0.0",
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && node removeInlineScript.cjs",
    "build:web-ext:chromium": "node generateManifest.cjs chromium && web-ext build --source-dir=build --overwrite-dest --artifacts-dir=build-web-ext/chromium",
    "build:web-ext:firefox": "node generateManifest.cjs firefox && web-ext build --source-dir=build --overwrite-dest --artifacts-dir=build-web-ext/firefox",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "run:ff": "node generateManifest.cjs firefox && web-ext run --devtools --firefox=deved --source-dir=build",
    "i18n": "paraglide-js compile --project ./project.inlang --outdir ./src/i18n/generated"
  },
  "devDependencies": {
    "@floating-ui/core": "^1.6.0",
    "@floating-ui/dom": "^1.6.3",
    "@iconify/json": "^2.2.202",
    "@iconify/tailwind": "^0.1.4",
    "@iconify/utils": "^2.1.23",
    "@inlang/paraglide-js": "1.7.0",
    "@inlang/paraglide-js-adapter-vite": "^1.2.40",
    "@skeletonlabs/skeleton": "^2.9.1",
    "@skeletonlabs/tw-plugin": "^0.4.0",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.5.6",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.12",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "autoprefixer": "^10.4.19",
    "browser-storage-polyfill": "^1.0.11",
    "chart.js": "^4.4.2",
    "cssnano": "^6.1.2",
    "cssnano-preset-default": "^6.1.2",
    "cssnano-preset-lite": "^3.1.0",
    "date-fns": "^3.6.0",
    "debounce": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.37.0",
    "fast-json-patch": "^3.1.1",
    "flat-ui-colors-json": "^0.1.0",
    "nanoid": "^5.0.7",
    "openmeteo": "^1.1.3",
    "p-debounce": "^4.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "randomcolor": "^0.6.2",
    "svelte": "^4.2.15",
    "svelte-chartjs": "^3.1.5",
    "svelte-check": "^3.6.9",
    "svelte-fast-dimension": "^1.1.0",
    "svelte-floating-ui": "^1.5.8",
    "svelte-moveable": "^0.45.0",
    "svelte-selecto": "^1.26.3",
    "svelte-use-debounce": "^0.0.2",
    "svelte-virtual-scroll-list": "^1.3.0",
    "svelte-webext-storage-adapter": "^3.0.2",
    "tailwindcss": "^3.4.3",
    "tiny-glob": "^0.2.9",
    "tslib": "^2.6.2",
    "tslog": "^4.9.2",
    "typescript": "^5.4.5",
    "vanilla-colorful": "^0.7.2",
    "vite": "^5.2.9",
    "vite-plugin-run-generator": "workspace:*",
    "vite-plugin-tailwind-purgecss": "^0.3.1",
    "web-ext": "^7.11.0",
    "webextension-polyfill": "^0.11.0"
  },
  "type": "module"
}
