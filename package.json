{
	"name": "my-own-tab",
	"version": "0.0.1",
	"private": true,
	"packageManager": "pnpm@8.11.0",
	"engines": {
		"pnpm": ">=8.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && node removeInlineScript.cjs",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"run:ff": "web-ext run --devtools --firefox=deved --source-dir=build",
		"i18n": "paraglide-js compile --project ./project.inlang --outdir ./src/i18n/generated"
	},
	"devDependencies": {
		"@floating-ui/dom": "^1.5.3",
		"@inlang/paraglide-js": "1.0.0-prerelease.18",
		"@inlang/paraglide-js-adapter-vite": "^1.0.1",
		"@skeletonlabs/skeleton": "^2.6.0",
		"@skeletonlabs/tw-plugin": "^0.3.0",
		"@svelte-put/resize": "^3.0.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.30.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"@types/webextension-polyfill": "^0.10.7",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"autoprefixer": "^10.4.16",
		"browser-storage-polyfill": "^1.0.6",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"npm-run-all": "^4.1.5",
		"p-debounce": "^4.0.0",
		"postcss": "^8.4.32",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"randomcolor": "^0.6.2",
		"svelte": "^4.2.8",
		"svelte-awesome-color-picker": "3.0.0-beta.9",
		"svelte-check": "^3.6.2",
		"svelte-moveable": "^0.45.0",
		"svelte-portal": "^2.2.0",
		"svelte-use-debounce": "^0.0.2",
		"svelte-virtual-scroll-list": "^1.3.0",
		"svelte-webext-storage-adapter": "^3.0.1",
		"tailwindcss": "^3.3.6",
		"tiny-glob": "^0.2.9",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^4.4.2",
		"vite-plugin-tailwind-purgecss": "^0.1.4",
		"web-ext": "^7.9.0",
		"webextension-polyfill": "^0.10.0"
	},
	"pnpm": {
		"updateConfig": {
			"ignoreDependencies": [
				"vite"
			]
		},
		"peerDependencyRules": {
			"allowedVersions": {
				"svelte-use-debounce>svelte": "^4.0.0",
				"addons-scanner-utils>node-fetch": "^3.0.0"
			}
		}
	},
	"type": "module"
}
